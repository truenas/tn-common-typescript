{
  "name": "@truenas/common-typescript",
  "version": "1.0.0",
  "description": "Shared TypeScript utilities, scripts and ESLint configurations for TrueNAS projects",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "lint": "node scripts/lint.ts",
    "test:changed": "node scripts/test_changed.js"
  },
  "exports": {
    "./scripts/lint": "./scripts/lint.ts",
    "./scripts/test_changed": "./scripts/test_changed.js",
    "./eslint.config": "./eslint.config.mjs",
    "./eslint/*": "./eslint/*"
  },
  "files": [
    "scripts",
    "eslint",
    "eslint.config.mjs"
  ],
  "keywords": [
    "truenas",
    "typescript",
    "eslint",
    "lint",
    "testing"
  ],
  "author": "TrueNAS",
  "license": "MIT",
  "dependencies": {
    "@eslint/compat": "~1.4.1",
    "@eslint/js": "~9.39.1",
    "@smarttools/eslint-plugin-rxjs": "~1.0.22",
    "@stylistic/eslint-plugin": "~5.5.0",
    "@typescript-eslint/eslint-plugin": "~8.46.3",
    "@typescript-eslint/parser": "~8.46.3",
    "angular-eslint": "~20.5.1",
    "eslint": "^9.39.1",
    "eslint-plugin-angular-file-naming": "~1.0.6",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-rxjs-angular": "^2.0.1",
    "eslint-plugin-sonarjs": "~3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "~8.46.3"
  },
  "peerDependencies": {
    "jest": "*"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}